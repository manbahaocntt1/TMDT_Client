@model List<BanSachWeb.Models.DanhMucChinh>

@foreach (var category in Model)
{
    <li class="dropdown-submenu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@category.TenDanhMuc</a>
        <ul class="dropdown-menu">
            @foreach (var subCategory in category.DanhMucPhus)
            {
                <li><a href="@Url.Action("ViewCategory", "Sach", new { id = subCategory.MaDanhMucPhu })">@subCategory.TenDanhMuc</a></li>
            }
        </ul>
    </li>
}



<style>

    .dropdown-submenu:hover .dropdown-menu {
        display: block;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        background-color: rgb(55, 140, 231);
        width: 250px;
        height: fit-content;
        border-radius: 0;
    }

        .dropdown-menu li {
            margin: 5px 0;
            padding: 10px;
        }

            .dropdown-menu li a {
                color: #333;
                text-decoration: none;
                display: block;
                color: white;
            }

                .dropdown-menu li a:hover {
                    color: black;
                    background-color: rgb(55, 140, 231);
                }

    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
        }
</style>


